<div class="col-xs-offset-1 col-xs-10">
    <table class="table table-condensed">
        <tr>
            <th>RFID</th>
            <th>SIA</th>
            <th>Rua</th>
            <th>Passadeira</th>
            <th>Local</th>
            <th></th>
        </tr>
        <% @rfids.each do |r| %>
            <tr>
                <td><%= r.number %></td>
                <td><%= r.sia %></td>
                <td>
                    <% if r.href %>
                        <a href=<%=r.href %>><%= r.rua %></a>
                    <% else %>
                        <%= r.rua %>
                    <% end %>
                </td>
                <td><%= r.passadeira %></td>
                <td><%= r.local %></td>
                <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
            </tr>
        <% end %>
    </table>
</div>
