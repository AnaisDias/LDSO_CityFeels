<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.ana.cityfeels.fragments.Menu">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="113dp"
        android:layout_height="93dp"
        android:id="@+id/repeatButtonImage"
        android:layout_gravity="right|bottom"
        android:background="@drawable/cena"
        android:layout_below="@+id/buttonsLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:id="@+id/buttonsLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="BASICA"
            android:id="@+id/basicButton"
            android:background="@drawable/buttonprincipal" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="LOCAL"
            android:id="@+id/localButton"
            android:background="@drawable/buttonprincipal" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="DETALHE"
            android:id="@+id/detailedButton"
            android:background="@drawable/buttonprincipal" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OUTRA"
            android:id="@+id/anotherButton"
            android:background="@drawable/buttonprincipal" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/repeatButtonImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ouvir"
            android:id="@+id/ouvirRadioButton"
            android:layout_above="@+id/silenciarRadioButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SilÃªnciar"
            android:id="@+id/silenciarRadioButton"
            android:layout_alignBottom="@+id/repeatButtonImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RadioGroup>

</RelativeLayout>
