<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ana.cityfeels.activities.FreeModeActivity"
    tools:showIn="@layout/activity_free_mode">

    <AutoCompleteTextView
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/inicios"
        android:spinnerMode="dialog"
        android:layout_below="@+id/percursoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/destinos"
        android:layout_below="@+id/inicios"
        android:spinnerMode="dialog"
        android:layout_centerHorizontal="true"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:onClick="calcular"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/calcularButton"
        android:background="@drawable/buttonprincipal"
        android:layout_gravity="right"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/destinos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/splitter"
        android:layout_above="@+id/informacaoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Informação"
        android:id="@+id/informacaoTextView"
        android:layout_above="@+id/buttonsLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:id="@+id/buttonsLayout"
        android:layout_above="@+id/repeatButtonImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="BASICA"
            android:id="@+id/button1"
            android:background="@drawable/buttonprincipal" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="LOCAL"
            android:id="@+id/button2"
            android:background="@drawable/buttonprincipal" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="DETALHE"
            android:id="@+id/button3"
            android:background="@drawable/buttonprincipal" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="OUTRA"
            android:id="@+id/button4"
            android:background="@drawable/buttonprincipal" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Percurso"
        android:id="@+id/percursoTextView"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Modo livre"
        android:id="@+id/modoLivreTextView"
        android:layout_below="@+id/calcularButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testar"
        android:id="@+id/testButton"
        android:layout_gravity="right"
        android:layout_above="@+id/splitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="113dp"
        android:layout_height="93dp"
        android:id="@+id/repeatButtonImage"
        android:layout_gravity="right|bottom"
        android:background="@drawable/cena"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </ImageButton>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Som"
        android:id="@+id/soundSwitch"
        android:layout_gravity="left|bottom"
        android:clickable="true"
        android:enabled="true"
        android:textOn="Ligado"
        android:textOff="Desligado"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouvir"
        android:id="@+id/radioOuvir"
        android:checked="false"
        android:layout_gravity="left|top"
        android:layout_above="@+id/radioSilenciar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silênciar"
        android:id="@+id/radioSilenciar"
        android:checked="false"
        android:layout_gravity="left|center_vertical"
        android:layout_above="@+id/soundSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modoLivreDirecoes"
        android:layout_below="@+id/modoLivreTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
